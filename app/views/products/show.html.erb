<div class="product-detail" style="max-width: 600px; margin: 0 auto; padding: 2rem;">
  <% if @product.photo.present? %>
    <img src="<%= @product.photo %>" alt="<%= @product.name %>" class="product-photo" style="width: 100%; max-width: 400px; height: 300px; object-fit: cover; border-radius: 8px; margin-bottom: 2rem;">
  <% end %>
  
  <h1><%= @product.name %></h1>
  
  <div class="product-info" style="margin: 2rem 0;">
    <p class="category" style="color: #666; margin-bottom: 0.5rem;">
      <strong>Category:</strong> <%= @product.category.name %>
      <% if @product.subcategory %>
        > <%= @product.subcategory.name %>
      <% end %>
    </p>
    
    <p class="price" style="font-size: 1.5rem; font-weight: bold; color: #2563eb; margin-bottom: 1rem;">
      <%= @product.formatted_price %>
    </p>
    
    <% if @product.description.present? %>
      <div class="description" style="color: #555; line-height: 1.6;">
        <strong>Description:</strong>
        <p><%= @product.description %></p>
      </div>
    <% end %>
  </div>
  
  <% if user_signed_in? %>
    <div class="cart-actions" style="margin: 2rem 0; padding: 1.5rem; background-color: #f8fafc; border-radius: 8px; border: 2px solid #e2e8f0;">
      <%= form_with url: add_item_cart_path, method: :post, local: false, data: { turbo: false }, style: "display: flex; align-items: center; gap: 1rem;" do |f| %>
        <%= f.hidden_field :product_id, value: @product.id %>
        
        <div style="display: flex; align-items: center; gap: 0.5rem;">
          <%= f.label :quantity, "Quantity:", style: "font-weight: 500;" %>
          <%= f.number_field :quantity, value: 1, min: 1, max: 99, 
              style: "width: 70px; padding: 0.5rem; border: 1px solid #d1d5db; border-radius: 4px;" %>
        </div>
        
        <%= f.submit "Add to Cart", style: "background-color: #059669; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; cursor: pointer; font-size: 16px; font-weight: 500;" %>
      <% end %>
      
      <p style="margin: 0.5rem 0 0 0; font-size: 14px; color: #6b7280;">
        🛒 Add this item to your shopping cart
      </p>
    </div>
  <% else %>
    <div class="login-prompt" style="margin: 2rem 0; padding: 1.5rem; background-color: #fef3c7; border-radius: 8px; border: 2px solid #f59e0b;">
      <p style="margin: 0; color: #92400e; font-weight: 500;">
        <%= link_to "Sign in", new_user_session_path, style: "color: #92400e; text-decoration: underline;" %> to add items to your cart
      </p>
    </div>
  <% end %>
  
  <div class="actions" style="margin-top: 2rem;">
    <%= link_to "← Back to Products", products_path, style: "color: #2563eb; text-decoration: none;" %>
    <span style="margin: 0 1rem;">|</span>
    <%= link_to "View #{@product.category.name.capitalize}", products_path(category: @product.category.name), style: "color: #2563eb; text-decoration: none;" %>
    
    <% if user_signed_in? && current_user.admin? %>
      <div class="admin-actions" style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e5e7eb;">
        <%= link_to "Edit Product", edit_product_path(@product), style: "background-color: #2563eb; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 6px; margin-right: 1rem;" %>
        <%= link_to "Delete Product", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?" }, style: "background-color: #dc2626; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 6px;" %>
      </div>
    <% end %>
  </div>
</div>
